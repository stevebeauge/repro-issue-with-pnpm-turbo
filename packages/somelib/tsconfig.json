{
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "compilerOptions": {
        "outDir": "./lib",
        "rootDir": "./src",
        "baseUrl": "./src",
        "target": "ES2019",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react",
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,

        "lib": ["dom", "esnext", "es5", "ES2015", "es2021"],
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true
    }
}
